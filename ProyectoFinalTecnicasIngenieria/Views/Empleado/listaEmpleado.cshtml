@{
}
<div class="container mt-5">
    <!-- Titulo de la pagina -->
    <h1 class="text-center mb-4">Listado de Empleados</h1>
    <a href="@Url.Action("AgregarEmpleado", "Empleado")" class="btn custom-btn-info">
        <i class="bi bi-plus-square-fill"></i>
    </a>
    <!-- Tabla de Alumnos -->
    <table class="table ">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Telefono</th>
                <th>Cargo</th>
                <th>Email
                <th>Ver</th>
                <th>Borrar</th>
                <th>Editar</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in (ViewBag.empleado as IEnumerable<Empleados>))
            {
                <tr>
                    <td>@item.idempleado</td>
                    <td>@item.Nombre</td>
                    <td>@item.Telefono</td>
                    <td>@item.Cargo</td>
                    <td>@item.Email</td>

                    <td>
                        <a href="@Url.Action("VerEmpleado", "Empleado", new { id = @item.idempleado })" class="btn custom-btn-info"><i class="bi bi-eye-fill"></i></a>
                    </td>
                    <td>
                        <a href="@Url.Action("BorrandoEmpleados", "Empleado", new { id = @item.idempleado })" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                    <td>
                        <a href="@Url.Action("EditarEmpleados", "Empleado", new { id = @item.idempleado })" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<style>
    .custom-btn-info {
        background-color: steelblue; /* Color original del botón */
        color: white; /* Asegura que el ícono sea visible */
        border: none;
    }

        .custom-btn-info:hover {
            background-color: midnightblue; /* Color más oscuro al pasar el cursor */
            color: white; /* Asegura que el ícono sea visible */
        }

        .custom-btn-info i {
            font-size: 1.5em; /* Aumenta el tamaño del ícono si es necesario */
        }

    .btn-danger {
        background-color: steelblue; /* Rojo para el botón de borrar */
        color: white;
        border: none;
    }

        .btn-danger:hover {
            background-color: midnightblue; /* Rojo más oscuro al pasar el cursor */
            color: white; /* Asegura que el ícono sea visible */
        }

    .btn-warning {
        background-color: steelblue; /* Amarillo para el botón de editar */
        color: white;
        border: none;
    }

        .btn-warning:hover {
            background-color: midnightblue; /* Amarillo más oscuro al pasar el cursor */
            color: white; /* Asegura que el ícono sea visible */
        }

        /* Estilo para los iconos dentro de los botones */
        .btn-danger i,
        .btn-warning i {
            font-size: 1.5em; /* Aumenta el tamaño del ícono si es necesario */
        }
</style>

<style>
    body {
        background-image: url('https://i.ibb.co/jDHk8gH/Tarjeta-Felicitaci-n-de-Graduaci-n-Ilustrado-Azul-1.png');
        background-size: cover; /* Hace que la imagen cubra toda la pantalla */
        background-repeat: no-repeat; /* Evita que la imagen se repita */
        background-position: center; /* Centra la imagen en la pantalla */
        background-attachment: fixed; /* Hace que la imagen no se mueva al hacer scroll */
    }

    .container {
        border-radius: 10px; /* Bordes redondeados */
        padding: 20px;
        margin-top: 80px;
        background-color: rgba(255, 255, 255, 0.1); /* Fondo translúcido */
        backdrop-filter: blur(10px); /* Desenfoque aplicado al fondo detrás del contenedor */
        color: white;
    }

    .table {
        color: white;
    }
</style>