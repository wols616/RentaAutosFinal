
<div class="container mt-5">
    <!-- Titulo de la pagina -->
    <h1 class="text-center mb-4">Listado de Autos</h1>

    <!-- Tabla de Alumnos -->
    <a href="@Url.Action("AgregarAuto", "Auto")" class="btn custom-btn-info">
        <i class="bi bi-plus-square-fill"></i>
    </a>
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Placa</th>
                <th>Tipo</th>
                <th>Estado</th>
                <th>Costo_dia</th>
                <th>Ver</th>
                <th>Borrar</th>
                <th>Editar</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in (ViewBag.autos as IEnumerable<Autos>))
            {
                <tr>
                    <td>@item.idauto</td>
                    <td>@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>@item.Placa</td>
                    <td>@item.Tipo</td>
                    <td>@(item.Estado == "1" ? "Disponible" : "No disponible")</td>
                    <td>@item.Costo_dia</td>


                    <td>
                        <a href="@Url.Action("VerAuto", "Auto", new { id = @item.idauto })" class="btn btn-info"><i class="bi bi-eye-fill"></i></a>
                    </td>
                    <td>
                        <a href="@Url.Action("BorrandoAuto", "Auto", new { id = @item.idauto })" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                    <td>
                        <a href="@Url.Action("EditarAuto", "Auto", new { id = @item.idauto })" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<style>
    .custom-btn-info {
        background-color: green; /* color original de btn-info */
        color: white; /* Asegura que el ícono sea visible */
        border: none;
    }

        .custom-btn-info:hover {
            background-color: #138496; /* Color más oscuro al pasar el cursor */
        }

        .custom-btn-info i {
            font-size: 1.5em; /* Aumenta el tamaño del ícono si es necesario */
        }
</style>