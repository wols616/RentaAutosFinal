
<div class="container mt-5">
    <!-- Titulo de la pagina -->
    <h1 class="text-center mb-4">Listado de Autos</h1>

    <!-- Tabla de Alumnos -->
    <a href="@Url.Action("AgregarAuto", "Auto")" class="btn custom-btn-info">
        <i class="bi bi-plus-square-fill"></i>
    </a>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>ID</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Placa</th>
                <th>Tipo</th>
                <th>Estado</th>
                <th>Costo_dia</th>
                <th>Ver</th>
                <th>Borrar</th>
                <th>Editar</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in (ViewBag.autos as IEnumerable<Autos>))
            {
                <tr>
                    <td>@item.idauto</td>
                    <td>@item.Marca</td>
                    <td>@item.Modelo</td>
                    <td>@item.Placa</td>
                    <td>@item.Tipo</td>
                    <td>@(item.Estado == "1" ? "Disponible" : "No disponible")</td>
                    <td>@item.Costo_dia</td>


                    <td>
                        <a href="@Url.Action("VerAuto", "Auto", new { id = @item.idauto })" class="btn custom-btn-info"><i class="bi bi-eye-fill"></i></a>
                    </td>
                    <td>
                        <a href="@Url.Action("BorrandoAuto", "Auto", new { id = @item.idauto })" class="btn btn-danger"><i class="bi bi-trash3-fill"></i></a>
                    </td>
                    <td>
                        <a href="@Url.Action("EditarAuto", "Auto", new { id = @item.idauto })" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>

<style>
    .custom-btn-info {
        background-color: steelblue; /* Color original del botón */
        color: white; /* Asegura que el ícono sea visible */
        border: none;
    }

        .custom-btn-info:hover {
            background-color: midnightblue; /* Color más oscuro al pasar el cursor */
            color: #e2f6fc; /* Asegura que el ícono sea visible */
            transform: scale(1.06);
            transition: transform 0.5s ease;
            
        }

        .custom-btn-info i {
            font-size: 1.5em; /* Aumenta el tamaño del ícono si es necesario */
        }

    .btn-danger {
        background-color: steelblue; /* Rojo para el botón de borrar */
        color: white;
        border: none;
    }

        .btn-danger:hover {
            background-color: midnightblue; /* Rojo más oscuro al pasar el cursor */
            color: #e2f6fc; /* Asegura que el ícono sea visible */
            transform: scale(1.06);
            transition: transform 0.5s ease;
        }

    .btn-warning {
        background-color: steelblue; /* Amarillo para el botón de editar */
        color: white;
        border: none;
    }

        .btn-warning:hover {
            background-color: midnightblue; /* Amarillo más oscuro al pasar el cursor */
            color: #e2f6fc; /* Asegura que el ícono sea visible */
            transform: scale(1.06);
            transition: transform 0.5s ease;
        }

        /* Estilo para los iconos dentro de los botones */
        .btn-danger i,
        .btn-warning i {
            font-size: 1.5em; /* Aumenta el tamaño del ícono si es necesario */
        }
</style>

<style>
    body {
        background-image: url('https://i.ibb.co/jDHk8gH/Tarjeta-Felicitaci-n-de-Graduaci-n-Ilustrado-Azul-1.png');
        background-size: cover; /* Hace que la imagen cubra toda la pantalla */
        background-repeat: no-repeat; /* Evita que la imagen se repita */
        background-position: center; /* Centra la imagen en la pantalla */
        background-attachment: fixed; /* Hace que la imagen no se mueva al hacer scroll */
    }

    .container {
        border-radius: 10px; /* Bordes redondeados */
        padding: 20px;
        margin-top: 80px;
        background-color: rgba(255, 255, 255, 0.1); /* Fondo translúcido */
        backdrop-filter: blur(10px); /* Desenfoque aplicado al fondo detrás del contenedor */
        color: white;
    }

    .table {
        color: white;
    }
</style>
